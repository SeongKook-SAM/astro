---
import BaseLayout from '../../layouts/BaseLayout.astro';

// 서비스 타입 정의
type ServiceId =
  | 'instagram'
  | 'youtube'
  | 'threads'
  | 'nplace'
  | 'tiktok'
  | 'facebook'
  | 'soundcloud'
  | 'twitter';

// 정적 경로 생성 함수 추가
export function getStaticPaths() {
  return [
    { params: { detail: 'instagram' } },
    { params: { detail: 'youtube' } },
    { params: { detail: 'threads' } },
    { params: { detail: 'nplace' } },
    { params: { detail: 'tiktok' } },
    { params: { detail: 'facebook' } },
    { params: { detail: 'soundcloud' } },
    { params: { detail: 'twitter' } },
  ];
}

const { detail } = Astro.params;

// 서비스별 제목 정의 - 타입 안전성 추가
const serviceTitles: Record<ServiceId, string> = {
  instagram: '인스타그램',
  youtube: '유튜브',
  threads: '스레드',
  nplace: 'N플레이스',
  tiktok: '틱톡',
  facebook: '페이스북',
  soundcloud: '사운드클라우드',
  twitter: '트위터',
};

// 타입 안전성 보장
const isValidService = (id: string | undefined): id is ServiceId =>
  id !== undefined && Object.keys(serviceTitles).includes(id);

const serviceTitle = isValidService(detail) ? serviceTitles[detail] : detail || '알 수 없는 서비스';

const pageTitle = `SNS헬프 - ${serviceTitle} 서비스`;
---

<BaseLayout pageTitle={pageTitle}>
  <section class:list={'mt-[130px] px-[12.5%]'}>
    <h1 class="text-2xl font-bold">{serviceTitle} 서비스</h1>
    <p>현재 보고 있는 서비스: {detail}</p>
  </section>
</BaseLayout>
