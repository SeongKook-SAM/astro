{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@assets/*": ["assets/*"],
      "@components/*": ["components/*"],
      "@layouts/*": ["layouts/*"],
      "@pages/*": ["pages/*"],
      "@widgets/*": ["widgets/*"],
      "@types/*": ["types/*"],
      "@scripts/*": ["scripts/*"],
      "@styles/*": ["styles/*"],
      "@common/*": ["common/*"]
    }
  },
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"]
}
